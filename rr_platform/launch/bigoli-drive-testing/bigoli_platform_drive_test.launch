<launch>
    <arg name="steer_port"/>

    <node pkg="rr_platform" type="bigoli_steer_test" name="steer_relay" output="screen">
        <param name="serial_port" value="$(arg steer_port)"/>
        <param name="max_angle_msg_in" value="0.3"/>
    </node>

    <arg name="drive_port"/>

    <node pkg="rr_platform" type="bigoli_drive_test" name="drive_relay" output="screen">
        <param name="serial_port" value="$(arg drive_port)"/>
        <param name="max_speed_msg_in" value="1.0"/>
    </node>
</launch>
